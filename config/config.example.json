{    
    "logs": {
        "descriptor": {
            "type": "console"
        },
        "options": {
            "level": 10
        }
    },
    
    "counters": {
        "descriptor": {        
            "type": "log"
        },
        "options": {
            "timeout": 10000
        }
    },
    
    "persistence": [
        {
            "descriptor": {
                "group": "pip-services-logging",
                "type": "file"
            },
            "options": {
                "path": "./logging.json"
            }
        },
        {
            "descriptor": {
                "group": "pip-services-logging",
                "type": "mongodb"
            }
            "options": {
                "path": "./logging.json"
            }
        }
    ],
    
    "controllers": {
        "descriptor": {
            "group": "pip-services-logging" 
        }
    },

    "clients": [],

    "services": [
        {
            "descriptor": {
                "group": "pip-services-logging",
                "type": "seneca",
                "version": "1.0"
            },
            "endpoint": {
                "protocol": "tcp",
                "host": "0.0.0.0",
                "port": 8815
            }
        },
        {
            "descriptor": {
                "group": "pip-services-logging",
                "type": "rest",
                "version": "1.0"
            },
            "endpoint": {
                "protocol": "http",
                "host": "0.0.0.0",
                "port": 8015
            }
        }
    ]
    
}